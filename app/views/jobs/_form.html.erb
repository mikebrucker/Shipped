<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Name:"%>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :origin, "Origin:" %>
    <%= form.select :origin, list %>
  </div>

  <div class="field">
    <%= form.label :destination, "Destination:" %>
    <%= form.select :destination, list %>
  </div>

  <div class="field">
    <%= form.label :cost, "Cost:" %>
    <%= form.number_field :cost, min: 1000, max: 10000001, step: 0.01, value: 1000.00 %>
  </div>

  <div class="field">
    <%= form.label :containers, "# of Containers Needed:" %>
    <%= form.number_field :containers, min: 100, max: 100001, step: 100, value: 100 %>
  </div>

  <div class="field">
    <%= form.label :desc, "Description:"%>
    <%= form.text_area :desc %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
