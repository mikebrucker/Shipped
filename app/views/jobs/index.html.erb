<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Destination</th>
      <th>Cost</th>
      <th>Containers</th>
      <th>Containers Needed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.desc %></td>
        <td><%= job.origin %></td>
        <td><%= job.destination %></td>
        <td><%= job.cost %></td>
        <td><%= job.containers %></td>
        <% if job.containers_needed > 0 %>
          <td><%= job.containers_needed %></td>
        <% else %>
          <td>0</td>
        <% end %>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

