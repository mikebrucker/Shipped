<%= form_with(model: boat, local: true) do |form| %>
  <% if boat.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(boat.errors.count, "error") %> prohibited this boat from being saved:</h2>

      <ul>
      <% boat.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Name:" %>
    <%= form.text_field :name, value: "S.S." %>
  </div>

  <div class="field">
    <%= form.label :max_containers, "# of Containers:" %>
    <%= form.number_field :max_containers, value: 100, min: 100, max: 5001, step: 50 %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.select :location, list %>
  </div>

    <%= form.hidden_field :profile_id, value: current_user.profile.id %>

  <div class="actions">
    <%= form.submit value: "Set Sail" %>
  </div>
<% end %>
