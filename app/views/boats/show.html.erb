<p>
  <strong>Ship Captain:</strong> <%= @boat.profile.officer %>
</p>

<p>
  <strong>Boat:</strong> <%= @boat.name %>
</p>

<p>
  <strong>Max containers:</strong> <%= @boat.max_containers %>
</p>

<p>
  <strong>Location:</strong> <%= @boat.location %>
</p>

<p>
  <% if @boat.avatar.attached?%>
    <%= image_tag @boat.avatar.variant(resize: "100x100") %>
  <% else %>
    No Image
  <% end %>
</p>

<% if current_user == @boat.profile.user %>
  <%= link_to 'Edit', edit_boat_path(@boat) %>
  <%= link_to 'Destroy', @boat, method: :delete %>
<% end %>
<%= link_to 'Back', boats_path %>

<p>
  Jobs for <strong><%= @boat.profile.officer %>'s Boat: <%= @boat.name %></strong>
</p>
<% @boat.jobs.each do |job| %>
  <p>
    <strong>Job Name:</strong> <%= job.name %>
  </p>

  <p>
    <strong>Origin:</strong> <%= job.origin %>
  </p>

  <p>
    <strong>Destination:</strong> <%= job.destination %>
  </p>

  <p>
    <strong>Job Cost:</strong> <%= job.cost %>
  </p>

  <p>
    <strong>Containers Needed:</strong> <%= job.containers %>
  </p>

  <p>
    <strong>Job Description:</strong> <div><%= job.desc %></div>
  </p>

  <%= link_to 'Edit', edit_job_path(job) %>

<% end %>

