<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.fname %></td>
        <td><%= profile.lname %></td>
        <td><%= profile.rank %></td>
        <td><%= link_to 'Show', profile %></td>
        <% if current_user == profile.user %>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
