<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email" %>
  </div>

  <div class="field">
    <div>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password" %>
    </div>
    <div>
      <% if @minimum_password_length %>
        <em><sup>(<%= @minimum_password_length %> characters minimum)</sup></em>
      <% end %>
    </div>
    <div>
    <%= f.label :password_confirmation, "Confirm PW" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm Password", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
