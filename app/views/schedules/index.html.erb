<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Boat</th>
      <th>Start</th>
      <th>Finish</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.job.name %></td>
        <td><%= schedule.boat.name %></td>
        <td><%= schedule.start.strftime("%B, %d, %Y") %></td>
        <td><%= schedule.finish.strftime("%B, %d, %Y")%></td>
        <td><%= link_to 'Show', schedule %></td>
        <% if current_user == schedule.boat.profile.user %>
          <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
          <td><%= link_to 'Destroy', schedule, method: :delete %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Schedule', new_schedule_path %>
